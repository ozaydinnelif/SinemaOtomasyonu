@model Contact

<form method="post" asp-action="AddContact">
    <div class="row g-3">
        <div asp-validation-summary="ModelOnly"></div>
        <div class="col-md-12">
            <div class="form-floating">
                <input asp-for="Name" type="text"
                       class="form-control bg-light border-0"
                       id="name"
                       placeholder="İsminiz" />
                <label asp-for="Name">İsminiz</label>
                
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="Email" type="email"
                       class="form-control bg-light border-0"
                       id="email"
                       placeholder="Email" />
                <label asp-for="Email">Email</label>
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Address" type="text"
                       class="form-control bg-light border-0"
                       id="email"
                       placeholder="Email" />
                <label asp-for="Address">Email</label>
                <span class="text-danger" asp-validation-for="Address"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-floating">
                <input asp-for="Phone" type="text"
                       class="form-control bg-light border-0"
                       id="phone"
                       placeholder="05xx..." />
                <label asp-for="Phone">Telefon numarası</label>

            </div>
        </div>

        <div class="col-12">
            <div class="form-floating">
                <textarea asp-for="Message" class="form-control bg-light border-0"
                          placeholder="Leave a message here"
                          id="message"
                          style="height: 100px"></textarea>
                <label asp-for="Message">Mesaj</label>

            </div>
        </div>


        <div class="col-12">
            <button class="btn btn-danger w-100 py-3" type="submit">
                Gönder
            </button>
        </div>
    </div>
</form>

